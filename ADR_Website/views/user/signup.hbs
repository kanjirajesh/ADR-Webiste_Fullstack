
<div class="row justify-content-center my-4">
  <div class="col-sm-4">
    <div class="card">
    <div class="card-header text-center bg-success"><strong>Sign-Up</strong></div>
        <div class="card-body text-center">        
          {{#if hasErrors }}
            <div class="alert alert-danger"> 
                {{# each messages }}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/user/signup/" method="post">
            <div class = "form-group col-md-8">
                <label for="email" class="pull-left font-weight-bold">E-Mail</label>
                <input type="text" class="form-control form-control-sm" id="email" name="email" class"form-control" placeholder="eg : haran@gmail.com">
                
            </div>
            
            <div class = "form-group col-md-8 my-4">
                <label for="password" class="pull-left font-weight-bold">Password</label>
                <input type="password" class="form-control form-control-sm" id="password" name="password" class"form-control" placeholder="Enter a valid Password">
                <small id="emailHelp" class="form-text text-muted pull-left">Password should be of length - 4 characters.</small>
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            
        </div>
      
      <div class="card-footer text-muted text-center">
          <button type="submit" class="btn bg-success">Create Account</button>            
      </div>
    </div>
  </div>

</div>