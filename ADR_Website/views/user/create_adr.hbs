<body>
 <div class="container">

    <div class="text-center">
        <h1>Create ADR</h1>
    </div>

    <form class="form-horizontal" action="create_adr" method="post">

            <div class="form-group">
                <label class="col-md-4 control-label" for="application">Application Name</label>
                <div class="col-md-4">
                    <input type="text" class="form-control form-control-sm" id="application" name="application" class="form-control" placeholder="Enter Application Name">
                </div>
            </div>


            <div class="form-group">
                <label class="col-md-4 control-label" for="project">Project</label>
                <div class="col-md-4">
                <input type="text" class="form-control form-control-sm" id="project" name="project" class="form-control" placeholder="Project">    
                </div>
            </div>


            <div class="form-group">
                <label class="col-md-4 control-label" for="databaseused">Database Used</label>
                <div class="col-md-4">
                    <input type="text" class="form-control form-control-sm" id="databaseused" name="databaseused" class="form-control" placeholder="Database Used">
                </div>
            </div>

            
            <div class="form-group">
                <label class="col-md-4 control-label" for="databasepreferred">Database Preferred</label>
                <div class="col-md-4">
                <input type="text" class="form-control form-control-sm" id="databasepreferred" name="databasepreferred" class="form-control" placeholder="Database Preferred">
                </div>
            </div>
 
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            <!-- Button -->
            <div class="form-group">
                <div class="col-md-4">
                    <button type="submit" class="btn bg-success">Save</button>  
                </div>
            </div>
    </form>
</div> 
</body>
